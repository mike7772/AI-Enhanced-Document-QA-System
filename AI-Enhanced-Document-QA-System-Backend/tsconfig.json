{
   "compilerOptions": {
     "outDir": "./dist",            // Output directory for compiled files
     "rootDir": "./",            // Root directory of source files
     "module": "commonjs",
     "target": "es6",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true
   },
   "include": ["src/**/*", "server.ts"],
   "exclude": ["node_modules", "**/*.spec.ts"]
 }
 